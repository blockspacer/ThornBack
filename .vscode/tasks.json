{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"shell": {
			"executable": "cmd.exe",
			"args": [
				"/d",
				"/c",
				"C:\\Program^ Files^ ^(x86^)\\Microsoft^ Visual^ Studio\\2017\\BuildTools\\VC\\Auxiliary\\Build\\vcvars64.bat",
				"&&"
			]
		}
	},
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "scons",
			"args": [
				"platform=windows",
				"target=debug",
				"-j8"
			],
			"options": {
				"cwd": "${workspaceFolder}\\Project\\GDNative"
			}
		},
		{
			"label": "build godot-cpp",
			"type": "shell",
			"command": "scons",
			"args": [
				"platform=windows",
				"-j8",
				"generate_bindings=yes",
				"use_custom_api_file=yes",
				"custom_api_file=../api.json"
			],
			"options": {
				"cwd": "${workspaceFolder}\\godot-cpp"
			},
			"problemMatcher": [
				"$msCompile"
			]
		}
	]
}